<!DOCTYPE html>
<html>
<head>
  <title>MeuseTech</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>	
	<%= stylesheet_link_tag 'messages' %>
	<%= stylesheet_link_tag 'navbar' %>
	<%= stylesheet_link_tag 'navbartop' %>
	<%= stylesheet_link_tag 'sidebar' %>
	<%= yield :stylesheet %>  
</head>

<body>
	
	<header>
		<%= render 'layouts/messages' %>
		<%= render 'layouts/navbar' %>
		<%= render 'layouts/sidebar' %>
	</header>

	<%= yield %>

	<footer>
		<%= render 'layouts/footer' %>
	</footer>

	<%= javascript_include_tag "https://code.jquery.com/jquery-2.2.3.min.js" %>
	<%= javascript_include_tag "pages" %>
	
	<%= yield :script %> 
	
</body>

</html>
