<!DOCTYPE html>
<html>
<head>
  <title>MeuseTech</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>	
	<%= stylesheet_link_tag 'messages' %>
	<%= stylesheet_link_tag 'navbar' %>
	<%= stylesheet_link_tag 'navbartop' %>
	<%= stylesheet_link_tag 'sidebar' %>
	<%= yield :stylesheet %>
     
</head>

<body>
	
	<header>
		<%= render 'layouts/messages' %>
		<% if request.fullpath== '/' %>
			<%= render 'layouts/navbar' %>
		<% else %>
			<%= render 'layouts/navbartop' %>
		<% end %>
		<%= render 'layouts/sidebar' %>
	</header>

	<%= yield %>

	<footer>
		<%= render 'layouts/footer' %>
	</footer>

	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	
</body>

</html>
