<% string_type ||= get_survey_type(survey_type) %>
<% with_badges ||= nil %>
<% if !with_badges || (with_badges && surveys_count(survey_type) > 0) %>
<%= link_to surveys_path(type: survey_type), class: "label label-survey label-survey-#{string_type} #{'label-with-badges' if with_badges}" do %>
<span><%= string_type %></span>
    <% if with_badges %>
<span class='badge label-badge label-badge-<%= string_type %>'><%= surveys_count(survey_type) %></span>
    <% end %>
  <% end %>
<% end %>