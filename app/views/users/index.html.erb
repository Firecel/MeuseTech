<h1>Espace Modération SuperAdministrateur </h1>

<table class="table">
	<thead class="thead-inverse">
		<tr>
			<th>#</th>
			<th>Nom</th>
			<th>Prénom</th>
			<th>Email</th>
			<th>Rôle actuel</th>
			<th>Changer Rôle</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			
		<tr>
			<th scope="row"><%= user.id %></th>
			<td><%= user.nom %></td>
			<td><%= user.prenom %></td>
			<td><%= user.email %></td>
			<td><%= user.role.label %></td>
			<td>
				<%= form_for(:user, :url => user_path(user), :method => 'PATCH') do |f| %>
							
				<%= f.select_tag 'role_id', options_from_collection_for_select(@roles, 'id', 'label', user.role_id) %>
				
			</td>
			<td>
				<%= f.submit 'Valider' %> | <a href="/users/<%= user.id %>" data-method="delete">Supprimer</a>
			</td>

				<% end %>			
		</tr>
			
		<% end %>
	</tbody>
</table>