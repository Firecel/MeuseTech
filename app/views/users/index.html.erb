<h1>Espace Modération SuperAdministrateur </h1>

<% if current_user %>
	<% if current_user.admin? %>
		<%= link_to 'TheRole Manage Panel', admin_roles_path %>
	<% end %>
<% end %>

<table class="table">
	<thead class="thead-inverse">
		<tr>
			<th>#</th>
			<th>Nom</th>
			<th>Prénom</th>
			<th>Email</th>
			<th>Rôle actuel</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			
		<tr>
			<th scope="row"><%= user.id %></th>
			<td><%= user.nom %></td>
			<td><%= user.prenom %></td>
			<td><%= user.email %></td>
			<td><%= user.role.name %></td>
			<td><a href="/users/<%= user.id %>" data-method="delete">Supprimer</a></td>
		</tr>
			
		<% end %>
	</tbody>
</table>